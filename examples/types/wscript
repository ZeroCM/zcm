#!/usr/bin/env python

def build(ctx):
    ctx.zcmgen(name    = 'examplezcmtypes',
               source  = ctx.path.ant_glob('*.zcm', excl='little_endian_t.zcm recursive_t.zcm'),
               lang    = ['c_stlib', 'c_shlib', 'cpp', 'java', 'python', 'nodejs', 'julia'],
               javapkg = 'example.zcmtypes')

    ctx.zcmgen(name    = 'examplezcmtypes_recursive',
               source  = ctx.path.ant_glob('example_t.zcm recursive_t.zcm'),
               lang    = ['c_stlib', 'c_shlib', 'cpp', 'java', 'python', 'julia'])

    ctx.zcmgen(name         = 'examplezcmtypes-little-endian',
               source       = ctx.path.ant_glob('little_endian_t.zcm'),
               lang         = ['c_stlib', 'c_shlib', 'cpp'],
               littleEndian = True)
